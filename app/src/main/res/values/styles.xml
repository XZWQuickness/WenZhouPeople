<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="login_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/lin_gray</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <style name="lin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/lin_gray</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>
    <style name="prescibe_rb">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/selector_specialty</item>
    </style>
    <style name="login_edit_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textColorHint">@color/text_shallow_gray</item>
    </style>

    <style name="line_blue_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/blue2</item>
    </style>

    <style name="rb_seafooter_pzb_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_marginEnd">@dimen/dp_10</item>
        <item name="android:background">@drawable/color_seafooter_pzb_bg</item>
        <item name="android:textColor">@color/color_seafooter_pzb_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ed_add_goods_address_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textColorHint">@color/text_shallow_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NotificationTitle" parent="android:TextAppearance.StatusBar.EventContent.Title" />
    <style name="NotificationText" parent="android:TextAppearance.StatusBar.EventContent" />

    <style name="login_get_code">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/ll</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="android:alpha">0.8</item>
        <item name="android:background">@drawable/login_bg_line</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/blue2</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
