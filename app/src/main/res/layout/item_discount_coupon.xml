<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:padding="@dimen/margin_5"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_10"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/icon_mine_coupon_bg"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/shopName"
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/blue2"
                    android:text="温州人家"/>
                <TextView
                    android:id="@+id/price"
                    android:padding="@dimen/margin_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_gray"
                    android:text="满99元可用 "/>

            </LinearLayout>


            <LinearLayout
                android:layout_marginEnd="@dimen/margin_15"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:text="¥"/>
                <TextView
                    android:id="@+id/price1"
                    android:textSize="@dimen/margin_40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:text="5"/>


            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5"
            android:background="@color/lin_gray"
            android:layout_marginStart="@dimen/margin_5"/>

        <LinearLayout
            android:padding="@dimen/margin_10"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有效期："/>
            <TextView
                android:id="@+id/dataTime"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-09-09 09:00-2018-09-09 09:00"/>




        </LinearLayout>

    </LinearLayout>

</LinearLayout>