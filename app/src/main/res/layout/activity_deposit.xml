<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include layout="@layout/action_bar_tv" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_10"
                android:text="账户可提现金额" />

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ 0000"
                android:textColor="@color/blue2" />

        </LinearLayout>

        <cn.com.szw.lib.myframework.view.ClearWriteEditText
            android:id="@+id/money_sum"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:background="@color/white"
            android:hint="请输入提现金额"
            android:padding="@dimen/margin_10"
            android:textColorHint="@color/text_gray"
             />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5"
            android:layout_marginStart="@dimen/margin_10"
            android:background="@color/lin_gray" />

        <cn.com.szw.lib.myframework.view.ClearWriteEditText
            android:id="@+id/bank_card_num"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="请输入银行卡号"
            android:padding="@dimen/margin_10"
            android:textColorHint="@color/text_gray"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5"
            android:layout_marginStart="@dimen/margin_10"
            android:background="@color/lin_gray" />

        <cn.com.szw.lib.myframework.view.ClearWriteEditText
            android:id="@+id/open_bank_name"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="请输入开户行名称"
            android:padding="@dimen/margin_10"
            android:textColorHint="@color/text_gray"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5"
            android:layout_marginStart="@dimen/margin_10"
            android:background="@color/lin_gray" />

        <cn.com.szw.lib.myframework.view.ClearWriteEditText
            android:id="@+id/bank_add"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="请输入开户行地址"
            android:padding="@dimen/margin_10"
            android:textColorHint="@color/text_gray"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="15sp" />

        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5"
            android:layout_marginStart="@dimen/margin_10"
            android:background="@color/lin_gray" />

        <cn.com.szw.lib.myframework.view.ClearWriteEditText
            android:id="@+id/hand_people_name"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="请输入持卡人姓名"
            android:padding="@dimen/margin_10"
            android:textColorHint="@color/text_gray"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5"
            android:layout_marginStart="@dimen/margin_10"
            android:background="@color/lin_gray" />

        <cn.com.szw.lib.myframework.view.ClearWriteEditText
            android:id="@+id/people_phone"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="请输入持卡人手机号"
            android:padding="@dimen/margin_10"
            android:textColorHint="@color/text_gray"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5"
            android:layout_marginStart="@dimen/margin_10"
            android:background="@color/lin_gray" />


    </LinearLayout>


    <Button
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_5"
        android:layout_marginEnd="@dimen/margin_10"
        android:layout_marginStart="@dimen/margin_10"
        android:background="@drawable/shape_login_blue_all"
        android:text="提交申请"
        android:textColor="@color/white" />

</RelativeLayout>