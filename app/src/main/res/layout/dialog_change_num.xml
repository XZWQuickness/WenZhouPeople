            android:layout_height="wrap_content"
            android:padding="@dimen/margin_10"
            android:src="@mipmap/icon_minus" />

        <EditText
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/lin_gray"
