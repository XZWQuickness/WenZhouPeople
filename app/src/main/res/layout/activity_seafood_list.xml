<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">



        <include layout="@layout/action_bar_tv"></include>
        <include layout="@layout/top_specialty"></include>

    <include layout="@layout/top_serach"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/refresh_recycler"></include>

        <LinearLayout
            android:id="@+id/llLay_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/synthesize_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:text="综合"
                    android:textColor="@color/blue2"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/lin1_"
                    style="@style/line_blue_style"></View>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sales_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:text="销量优先"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/lin2_"
                    style="@style/line_blue_style"
                    android:background="@color/lin_gray"></View>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/price_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableEnd="@mipmap/ic_price_gray"
                    android:drawablePadding="6dp"
                    android:padding="15dp"
                    android:text="价格"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/lin3_"
                    style="@style/line_blue_style"
                    android:background="@color/lin_gray"></View>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>