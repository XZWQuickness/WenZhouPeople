<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/goods_detail_classify"
        app:placeholderImageScaleType="fitCenter"
        app:progressBarAutoRotateInterval="5000"
        app:retryImage="@mipmap/ic_launcher"
        app:retryImageScaleType="centerCrop"
        app:roundingBorderColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />
    <TextView
        android:id="@+id/goodsName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="名字\nfa"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/text_14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="分类\n名称"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/MaterialGrey700"
        android:textSize="@dimen/text_12"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/goodsName"
        android:id="@+id/goodsChooseClassify"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="￥"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/green_6cc236"
        android:textSize="@dimen/text_12"
        app:layout_constraintLeft_toRightOf="@+id/img"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/goodsChooseClassify"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:id="@+id/priceText" />

    <TextView
        android:id="@+id/price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="168.00"
        android:textColor="@color/green_6cc236"
        android:textSize="@dimen/text_16"
        app:layout_constraintBaseline_toBaselineOf="@+id/priceText"
        app:layout_constraintLeft_toRightOf="@+id/priceText" />
    <TextView
        android:id="@+id/count"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="2dp"
        android:text="x1"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/priceText"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp" />

</android.support.constraint.ConstraintLayout>