<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/action_bar_tv"></include>

    <View style="@style/lin"></View>

    <include layout="@layout/refresh_recycler"></include>

    <View style="@style/lin"></View>

    <RelativeLayout
        android:id="@+id/rlLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:background="@null"
            android:button="@drawable/selector_gwcr_check"
            android:drawablePadding="10dp"
            android:text="全选"
            android:drawableStart="@mipmap/ic_gwc_false"
            android:textColor="@color/text_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/blue2"
            android:paddingBottom="15dp"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:paddingTop="15dp"
            android:text="结算"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/llFreight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/btnSubmit"
            android:orientation="vertical">

            <TextView
                android:id="@+id/allPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@color/blue2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/freight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="5dp"
                android:text="不含运费"
                android:textColor="@color/blue2"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>
    <View style="@style/lin"></View>
</LinearLayout>