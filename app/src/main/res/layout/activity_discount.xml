<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg1"
    android:orientation="vertical">

    <include layout="@layout/action_bar_tv"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5"
        android:background="@color/lin_gray"/>


    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tab_stub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:background="@color/white"
        tl:tl_iconVisible="false"
        tl:tl_indicator_color="@color/blue2"
        tl:tl_tab_space_equal="true"
        tl:tl_textBold="NONE"
        tl:tl_textSelectColor="@color/blue2"
        tl:tl_textUnselectColor="#909092"
        tl:tl_textsize="17sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5"
        android:background="@color/lin_gray"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>