<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/margin_20"
    android:paddingEnd="@dimen/margin_20"
    >

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/order_cancel_white_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="@dimen/margin_20"
            android:id="@+id/layout_top"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_5"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="温馨提示"
                    android:textSize="@dimen/text_14"
                    android:textColor="@color/text_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/msg"
                    android:text=""
                    android:textColorHint="@color/colorPrimary"
                    android:gravity="start"
                    android:textSize="@dimen/text_14"
                    android:padding="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_10"
                    android:textColor="@color/black_333333"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5"
            android:background="@color/lin_gray"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:id="@+id/hint_cancel"
                android:text="取消"
                android:gravity="center"
                android:textSize="@dimen/text_14"
                android:padding="@dimen/margin_15"
                android:background="@drawable/order_cancel_green_cancel_bg"
                android:textColor="@color/gary"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1"
                android:id="@+id/hint_confirm"
                android:text="确定"
                android:gravity="center"
                android:textSize="@dimen/text_14"
                android:padding="@dimen/margin_15"
                android:background="@drawable/order_cancel_blue_bg"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>